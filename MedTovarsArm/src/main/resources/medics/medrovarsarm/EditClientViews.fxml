<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="15" style="-fx-background-color: #283593; -fx-padding: 20;" fx:controller="medics.medrovarsarm.EditClientViews">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Редагування клієнта" style="-fx-font-family: 'Roboto'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ПІБ:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-font-family: 'Roboto'; -fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-font-family: 'Roboto'; -fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Телефон:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-font-family: 'Roboto'; -fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="saveBtn" text="Зберегти" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15; -fx-font-family: 'Roboto'; -fx-font-size: 14px;"/>
        <Button fx:id="cancelBtn" text="Скасувати" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15; -fx-font-family: 'Roboto'; -fx-font-size: 14px;"/>
    </HBox>
</VBox>