<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="medics.medrovarsarm.IssueProductViews"
      spacing="15" alignment="CENTER" style="-fx-background-color: #283593; -fx-padding: 20;">

    <Label text="Видача товару" style="-fx-font-family: 'Roboto'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>

    <Label text="Назва товару:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>
    <Label fx:id="productNameLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>

    <Label text="Ціна товару:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>
    <Label fx:id="priceLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>

    <Label text="Доступна кількість:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>
    <Label fx:id="availableQuantityLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>

    <Label text="Оберіть клієнта:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>
    <ChoiceBox fx:id="clientChoiceBox" prefWidth="200" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-font-family: 'Roboto'; -fx-font-size: 14px;"/>

    <Label text="Введіть кількість для видачі:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>
    <TextField fx:id="quantityField" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-font-family: 'Roboto'; -fx-font-size: 14px;"/>

    <Label text="Загальна сума:" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>
    <Label fx:id="totalLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 14px; -fx-text-fill: #ffffff;"/>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="issueButton" text="Видати" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15; -fx-font-family: 'Roboto'; -fx-font-size: 14px;"/>
        <Button fx:id="cancelButton" text="Скасувати" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15; -fx-font-family: 'Roboto'; -fx-font-size: 14px;"/>
    </HBox>

</VBox>